<Window x:Class="CanaryLauncherUpdate.SplashScreen"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:CanaryLauncherUpdate"
                Icon="pack://application:,,,/icon.ico"
		mc:Ignorable="d"
		Background="Transparent"
		AllowsTransparency="True"
		ResizeMode="NoResize"
		WindowStyle="None"
		WindowStartupLocation="CenterScreen"
		Title="Loading Launcher" Height="400" Width="800">
	<Grid>
                <Image
                        Height="280"
                        Source="pack://application:,,,/Assets/logo.png"
                        Stretch="Uniform"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Visibility="Visible"></Image>
                <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 220, 0, 0"
                        Orientation="Vertical">
                        <TextBlock
                                x:Name="LoadingMessage"
                                Foreground="White"
                                FontSize="16"
                                Text="Carregando configurações..."
                                Visibility="Collapsed"/>
                        <ProgressBar
                                x:Name="LoadingProgress"
                                Width="200"
                                Height="6"
                                Margin="0, 8, 0, 0"
                                IsIndeterminate="True"
                                Visibility="Collapsed"/>
                </StackPanel>
        </Grid>
</Window>
